# Configurações do Django
DEBUG=True
ENVIRONMENT=development  # development, staging, production
SECRET_KEY=sua_chave_secreta_aqui
ALLOWED_HOSTS=localhost,127.0.0.1

# Configurações de Segurança
USE_SECURITY_SETTINGS=False  # True para ativar configurações de segurança em desenvolvimento

# Configurações do Banco de Dados
DB_NAME=nix_db
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_HOST=localhost
DB_PORT=5432

# Configurações do Redis
REDIS_URL=redis://localhost:6379/0

# Configurações do Sentry
SENTRY_DSN=sua_dsn_do_sentry

# Configurações de Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=seu_email@gmail.com
EMAIL_HOST_PASSWORD=sua_senha_de_app
EMAIL_USE_TLS=True

# Configurações de Backup
BACKUP_ROOT=/caminho/para/backups
BACKUP_FORMAT=zip

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FILE=/caminho/para/logs/nix.log

# Configurações de CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
PROD_CORS_ALLOWED_ORIGINS=https://seu-dominio.com,https://www.seu-dominio.com

# Configurações de JWT
ACCESS_TOKEN_LIFETIME=1440  # Em minutos (24 horas)
REFRESH_TOKEN_LIFETIME=10080  # Em minutos (7 dias)